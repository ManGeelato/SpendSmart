@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>
<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br />
    <hr/>
    <h3>Total Expenses: R @ViewBag.Expenses</h3>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Value</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @{
                foreach (var expense in Model)
                {
                    <tr>
                        <td>
                            @expense.Id
                        </td>

                        <td>
                            @expense.Value
                        </td>

                        <td>
                            @expense.Description
                        </td>
                        <td>
                            <a class="btn  btn-primary" asp-action="CreateEdit" asp-route-id="@expense.Id">Edit</a>
                            <a class="btn btn-danger" asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
</table>
</div>


